<Window x:Class="GroundDroneApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GroundDroneApp"
        mc:Ignorable="d"
        Title="Ground drone app" Height="450" Width="800">


    <Window.Resources>
        <Style x:Key="GearBtnStyle" TargetType="Button">
            <Setter Property="Foreground" Value="DimGray"/>
            <Setter Property="Background" Value="WhiteSmoke"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Width" Value="140"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
        <Style x:Key="MoveBtnStyle" TargetType="Button">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="WhiteSmoke"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Width" Value="45"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="4"/>
        </Style>
        <Style x:Key="HandbrakeBtnStyle" TargetType="Button">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="7"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="6"/>
        </Style>
        <Style x:Key="GridStyle" TargetType="Grid">
            <Setter Property="Background" Value="LightGray"/>
        </Style>
        <Style x:Key="StatusDockPanel" TargetType="DockPanel">
            <Setter Property="Margin" Value="2"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="52px"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Menu VerticalAlignment="Top">
                <MenuItem Header="File" FontSize="16"></MenuItem>
                <MenuItem Header="Settings" FontSize="16"></MenuItem>
                <MenuItem Header="About" FontSize="16"></MenuItem>
            </Menu>
        </Grid>


        <Grid Grid.Row="1" Style="{StaticResource GridStyle}">

            
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>




            <Grid Grid.Column="0">
                <Border BorderThickness="5px" BorderBrush="Navy"></Border>
                <DockPanel Margin="20" LastChildFill="False">


                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                        <!-- Battery -->
                        <DockPanel x:Name="Battery" Style="{StaticResource StatusDockPanel}">
                            <Label DockPanel.Dock="Left">Battery:</Label>
                            <DockPanel DockPanel.Dock="Right">
                                <TextBlock DockPanel.Dock="Left" VerticalAlignment="Center">100</TextBlock>
                                <TextBlock DockPanel.Dock="Right" VerticalAlignment="Center">%</TextBlock>
                            </DockPanel>                        
                        </DockPanel>
                        <!-- Speed -->
                        <DockPanel x:Name="Speed" Style="{StaticResource StatusDockPanel}">
                            <Label DockPanel.Dock="Left">Speed:</Label>
                            <DockPanel DockPanel.Dock="Right">
                                <TextBlock DockPanel.Dock="Left" VerticalAlignment="Center">6</TextBlock>
                                <TextBlock DockPanel.Dock="Right" VerticalAlignment="Center">km/h</TextBlock>
                            </DockPanel>
                        </DockPanel>
                        <!-- COM-port status-->
                        <DockPanel x:Name="ComPortStatus" Style="{StaticResource StatusDockPanel}">
                            <Label DockPanel.Dock="Left">COM port:</Label>
                            <TextBlock DockPanel.Dock="Right" VerticalAlignment="Center"
                                       Foreground="Red">OFF</TextBlock>
                        </DockPanel>
                    </StackPanel>



                    <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal"
                                >

                        <!-- handbrake-->
                        <Button Style="{StaticResource HandbrakeBtnStyle}" 
                Background="Red" Foreground="White"
                                x:Name="HandbrakeOnBtn" Click="HandbrakeOnBtn_Click">
                            ON
                        </Button>
                        <Button Style="{StaticResource HandbrakeBtnStyle}"
                Background="Green" Foreground="Black"
                                x:Name="HandbrakeOffBtn" Click="HandbrakeOffBtn_Click"
                                IsEnabled="False">
                            OFF
                        </Button>
                    </StackPanel>

                    <StackPanel DockPanel.Dock="Left" VerticalAlignment="Center">
                        <!-- 100 % speed -->
                        <Button Style="{StaticResource GearBtnStyle}" IsEnabled="False"
                             Width="70" x:Name="GearFourBtn"
                                Click="GearFourBtn_Click">
                            4 gear
                        </Button>
                        <!-- 75 % speed -->
                        <Button Style="{StaticResource GearBtnStyle}" IsEnabled="False"
                             Width="70" x:Name="GearThreeBtn"
                                Click="GearThreeBtn_Click">
                            3 gear
                        </Button>
                        <!-- 50 % speed -->
                        <Button Style="{StaticResource GearBtnStyle}" IsEnabled="False"
                             Width="70" x:Name="GearTwoBtn"
                                Click="GearTwoBtn_Click">
                            2 gear
                        </Button>
                        <!-- 25 % speed -->
                        <Button Style="{StaticResource GearBtnStyle}" 
                             Width="70" x:Name="GearOneBtn"
                                Click="GearOneBtn_Click">
                            1 gear
                        </Button>
                    </StackPanel>

                    <!-- move buttons panel-->
                    <DockPanel DockPanel.Dock="Right" LastChildFill="False" Height="170">
                        <Button Style="{StaticResource MoveBtnStyle}" DockPanel.Dock="Top"
                                x:Name="MoveUpBtn">
                            ^
                        </Button>
                        <Button Style="{StaticResource MoveBtnStyle}" DockPanel.Dock="Bottom"
                                x:Name="MoveDownBtn">
                            v
                        </Button>
                        <Button Style="{StaticResource MoveBtnStyle}" DockPanel.Dock="Left"
                                x:Name="MoveLeftBtn">
                            &lt;
                        </Button>
                        <Button Style="{StaticResource MoveBtnStyle}" DockPanel.Dock="Right"
                                x:Name="MoveRightBtn">
                            &gt;
                        </Button>
                        <Button Style="{StaticResource MoveBtnStyle}"
                                x:Name="MoveCenterBtn">
                            o
                        </Button>

                    </DockPanel>
                </DockPanel>
            </Grid>



            <Grid Grid.Column="1">
                <Border BorderThickness="5px" BorderBrush="Navy"></Border>
                
                <StackPanel Grid.Column="1" Margin="20">
                    <Rectangle Width="300" Height="170"
                           Margin="20"  Fill="DarkGreen">

                    </Rectangle>

                    <StackPanel Orientation="Horizontal">
                        <Label>Camera pan:</Label>
                        <TextBox>30.5°</TextBox>

                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <Label>Camera tilt:</Label>
                        <TextBox>30.5°</TextBox>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <Label>Camera zoom:</Label>
                        <TextBox>1.5x</TextBox>
                    </StackPanel>

                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
